create table Cliente(
  	rut varchar(12) not null,
  	nombre varchar(50),
  	apellido varchar(50),
  	sexo CHARACTER,
  	habilitado boolean,
  	PRIMARY key (rut)
);
create table Pais(
	id_Pais int AUTO_INCREMENT not null,
  	nombre varchar(50) not null,
  	PRIMARY key (id_Pais)
);

SELECT * FROM Cliente;
SELECT * FROM Pais;

